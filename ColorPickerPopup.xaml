<Window x:Class="ArkServerManager.ColorPickerPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArkServerManager"
        xmlns:acp="clr-namespace:AdvancedColorPickerLib;assembly=AdvancedColorPickerLib"
        mc:Ignorable="d"
        Title="Select Color"
        ResizeMode="CanResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Width="500">

    <Grid Margin="5" Background="{DynamicResource BackgroundBrush1}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <!-- Picker -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>
        <Border Height="40" VerticalAlignment="Top" MouseDown="TitleBar_MouseDown">
            <Grid>
                <TextBlock Text="Select Color" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="White"/>
                <Button Content="X" HorizontalAlignment="Right" VerticalAlignment="Center" Width="30" Height="30" Margin="5" Click="CloseButton_Click" />
            </Grid>
        </Border>
        <acp:AdvancedColorPicker Grid.Row="1" x:Name="PopupColorPicker"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="75" Margin="5" Click="OkButton_Click" IsDefault="True"/>
            <Button Content="Cancel" Width="75" Margin="5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>